<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>



        <div class="container mt-5">
            <h2 class="text-center mb-4">Booked Movies
            </h2>

            <div class="row">
                <% bookedMovies[0].forEach(movie=> { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="<%= movie .ImageURL || 'https://via.placeholder.com/300x200' %>"
                                class="card-img-top" alt="<%= movie.m_name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Movie: <%= movie.m_name %>
                                </h5>
                                <p class="card-text">Booked Seats: <%= movie.seat_no %>
                                </p>
                                <p class="card-text">Show Time: <%= movie.st_time %> - <%= movie.end_time %>
                                </p>
                                <form action="/bookings/delete" method="POST">
                                    <input type="hidden" name="ticket_no" value="<%= movie.ticket_no %>">
                                    <input type="hidden" name="show_id" value="<%= movie.show_id %>">
                                    <input type="hidden" name="seat_no" value="<%= movie.seat_no %>">
                                    <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to cancel this booking?')">Cancel
                                        Booking</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>


        </div>

</body>

</html>