<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar') %>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Booked Movies
            </h2>

            <!-- Movie Cards -->
            <div class="row">
                <% bookedMovies[0].forEach(movie=> { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="<%= movie.imageUrl || 'https://via.placeholder.com/300x200' %>"
                                class="card-img-top" alt="<%= movie.m_name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Movie: <%= movie.m_name %>
                                </h5>
                                <p class="card-text">Show Time: <%= movie.st_time %> - <%= movie.end_time %>
                                </p>
                                <a href="/movies/<%= movie.m_id %>" class="btn btn-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <!-- No Movies Message -->
            <% if (bookedMovies.length===0) { %>
                <p class="text-center">You havent booked any tickets yet.</p>
                <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>