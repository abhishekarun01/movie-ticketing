<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Tickets - <%= movie.m_name %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .seat {
            width: 40px;
            height: 40px;
            margin: 5px;
            text-align: center;
            cursor: pointer;
        }

        .available {
            background-color: #28a745;
            color: #fff;
        }

        .selected {
            background-color: #ffc107;
            color: #000;
        }

        .unavailable {
            background-color: #dc3545;
            color: #fff;
            cursor: not-allowed;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %> <!-- Booking Content -->
        <div class="container mt-5">
            <h2 class="text-center">Book Tickets for <%= movie.m_name %>
            </h2>

            <!-- Movie Details -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= movie.m_name %>
                    </h5>
                    <img style="height: 20%; width: 20%;"
                        src="https://yt3.ggpht.com/a/AATXAJy3Z8msD_MKdPd4dTLB_kZiqOBM7SPquy2uKQ=s900-c-k-c0xffffffff-no-rj-mo"
                        alt="">
                    <p class="card-text">Rating: <%= movie.rating %> / 10</p>
                </div>
            </div>

            <!-- Showtimes Selection -->
            <form action="/movies/bookMovie/<%= movie.m_id %>" method="GET">
                <% if(shows.length !=0 ) { %>
                    <h4>Select Show Time</h4>
                    <input type="hidden" name="movie_id" value="<%= movie.m_id %>">
                    <div class="form-group mb-4">
                        <select class="form-select" name="show_id" required>
                            <% shows.forEach(show=> { %>
                                <option value="<%= show.show_id %>">
                                    <%= show.st_time %> - <%= show.end_time %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Confirm Booking</button>
                    <% }else {%>

                        <h4 style="color: #dc3545; font-style: italic;">
                            No shows available
                        </h4>
                        <% } %>

            </form>
        </div>
</body>

</html>