<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-heading {
            color: #495057;
            font-weight: bold;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

        <!-- Form Container -->
        <div class="form-container">
            <h2 class="text-center form-heading">Edit Movie - <%= movie.m_name %>
            </h2>

            <form action="/movies/<%= movie.m_id %>?_method=PUT" method="POST">
                <!-- Movie Title -->
                <div class="mb-3">
                    <label for="m_name" class="form-label">Movie Title</label>
                    <input type="text" class="form-control" id="title" name="m_name" value="<%= movie.m_name %>"
                        required>
                </div>

                <!-- Rating -->
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="number" class="form-control" id="rating" value="<%= movie.rating %> " name="rating"
                        min="1" max="5" step="0.5" placeholder="<%= movie.rating %>" required>
                </div>



                <div class="mb-3">
                    <label for="image" class="form-label">Movie Poster</label>
                    <input type="text" class="form-control" value="<%= movie.ImageURL %>" id="image" name="ImageURL"
                        accept="image/*" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-success" style="width: 24%;">Confirm</button>
                <a href="/shows/<%= movie.m_id %>" class="btn btn-info" style="width: 24%;">Add Show</a>
                <a href="/shows/delete/<%= movie.m_id %>" class="btn btn-secondary" style="width: 24%;">View Shows</a>
                <a href="/movies/<%= movie.m_id %>" class="btn btn-warning" style="width: 24%;">Cancel</a>
            </form>
        </div>

</body>

</html>