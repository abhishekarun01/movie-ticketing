<style>
    /* Custom Navbar Dropdown Styles */
    .navbar-nav .dropdown-menu {
        background-color: #333;
        /* Dark background */
        border-radius: 5px;
        padding: 10px 0;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        /* Soft shadow */
    }

    .navbar-nav .dropdown-item {
        color: #fff;
        /* White text for items */
        padding: 10px 20px;
        transition: background-color 0.2s ease-in-out;
        /* Smooth transition on hover */
    }

    .navbar-nav .dropdown-item:hover {
        background-color: #007bff;
        /* Blue highlight on hover */
        color: #fff;
        /* Keep text white on hover */
    }

    .navbar-nav .dropdown-item:focus {
        background-color: #007bff;
        /* Ensure focus state is also styled */
        color: #fff;
    }

    /* Customize the toggle button */
    .navbar-nav .dropdown-toggle {
        color: #fff;
        font-weight: bold;
        border: none;
    }

    /* Optional: Custom styling for the Welcome text */
    .navbar-nav .dropdown-toggle::after {
        font-size: 12px;
    }

    /* Make sure the navbar links are spaced well */
    /* .navbar-nav .nav-item {
        margin-left: 15px;
    } */

    /* Add responsiveness */
    @media (max-width: 767px) {
        .navbar-nav .dropdown-menu {
            background-color: #333;
            box-shadow: none;
            /* No shadow on small screens */
        }
    }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
